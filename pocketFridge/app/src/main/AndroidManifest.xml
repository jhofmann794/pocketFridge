<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pocketfridge.pocketfridge" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".groceryActivity"
            android:label="@string/title_activity_grocery" >
        </activity>
        <activity
            android:name=".inventoryActivity"
            android:label="@string/title_activity_inventory" >
        </activity>
        <activity
            android:name=".settingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".recipeActivity"
            android:label="@string/title_activity_recipe" >
        </activity>
        <activity
            android:name=".foodEditActivity"
            android:label="@string/title_activity_food_edit" >
        </activity>
        <activity
            android:name=".foodActivity"
            android:label="@string/title_activity_food" >
        </activity>
        <activity
            android:name=".cookingActivity"
            android:label="@string/title_activity_cooking" >
        </activity>
    </application>

</manifest>
